@model NewsForums.Models.Forum.ForumIndexModel


<div class="container body-content">
    <div class="row sectionHeader">
        <div class="sectionHeading">browse Forums</div>
        <div class="sectionDescription">
            <p>Welcome to <strong>NewsForums community</strong></p>
            <p>Please read the Forum Guidelines before creating a new post
            @if(!Context.User.Identity.IsAuthenticated)
            {
                <span>You must be a <a asp-controller="Account"
                                       asp-action="Register">registered memember</a> to create a new post</span>
            }
            </p>
        </div>
    </div>
    <div class="row "id="forumIndexContent">
        <table class="table table-hover"id="forumIndexTable">
            <tbody>
                @foreach (var forum in Model.ForumList)
                {
                    <tr>
                        <td>
                            <div class="forumLogo"style="background-image:url(@forum.ImageUrl"></div>
                            <div class="forumData">
                                <div class="forumTitle">
                                    <a asp-controller="Forum"asp-action="Topic"
                                    asp-route-id="@forum.Id">@forum.Name</a>
                                </div>
                                <div class="forumSubTitle">
                                    @if (forum.HasRecentPost)
                                    {
                                        <div class="hasRecentPost">Hot</div>
                                    }
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="forumPostCount">
                                @forum.NumberOfPosts Posts
                            </div>
                            <div class="dorumMemberCount">
                                @forum.NumberOfUsers Users
                            </div>
                        </td>
                        <td>
                            <div class="forumDescription">
                                @forum.Description
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


















